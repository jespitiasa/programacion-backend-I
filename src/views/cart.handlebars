<div>
  <h1>Carrito</h1>
  <div class="cart-container">
    {{#each cart.products}}
      <div class="master-container">
        <div class="cart-card cart">
          <label class="title">Tu carrito</label>
          <div class="products">
            <div class="product">
              <div>
                <img class="cart-img" src="{{this.product.thumbnail}}" alt="{{this.product.description}}">
              </div>
              <div>
                <span>{{this.product.title}}</span>
                <p>{{this.product.description}}</p>
              </div>
              <div class="quantity">
                <form action="/api/carts/{{../cart._id}}/products/{{this.product._id}}/decrease" method="POST">
                  <button type="submit">
                    <svg fill="none" viewBox="0 0 24 24" height="14" width="14" xmlns="http://www.w3.org/2000/svg">
                      <path stroke-linejoin="round" stroke-linecap="round" stroke-width="2.5" stroke="#47484b" d="M20 12L4 12"></path>
                    </svg>
                  </button>
                </form>
                <label>{{this.quantity}}</label>
                <form action="/api/carts/{{../cart._id}}/products/{{this.product._id}}/increase" method="POST">
                  <button type="submit">
                    <svg fill="none" viewBox="0 0 24 24" height="14" width="14" xmlns="http://www.w3.org/2000/svg">
                      <path stroke-linejoin="round" stroke-linecap="round" stroke-width="2.5" stroke="#47484b" d="M12 4V20M20 12H4"></path>
                    </svg>
                  </button>
                </form>
              </div>

              <label class="price small">${{this.product.price}}</label>
              <form action="/api/carts/{{../cart._id}}/products/{{this.product._id}}" method="POST" class="trash-container">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="trash-icon">
                  <svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="100" height="100" viewBox="0 0 30 30">
                    <path d="M 13 3 A 1.0001 1.0001 0 0 0 11.986328 4 L 6 4 A 1.0001 1.0001 0 1 0 6 6 L 24 6 A 1.0001 1.0001 0 1 0 24 4 L 18.013672 4 A 1.0001 1.0001 0 0 0 17 3 L 13 3 z M 6 8 L 6 24 C 6 25.105 6.895 26 8 26 L 22 26 C 23.105 26 24 25.105 24 24 L 24 8 L 6 8 z"></path>
                  </svg>
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
    <div class="cart-card checkout">
      <label class="title">Checkout</label>
      <div class="details">
        <span>Subtotal de tu carrito:</span>
        <span>{{total}}</span>
      </div>
      <div class="checkout--footer">
        <label class="price"><sup>$</sup>{{total}}</label>
        <button class="checkout-btn">Checkout</button>
      </div>
      <form action="/carts/{{cart._id}}/empty" method="POST">
        <button type="submit" class="empty-cart-btn">Vaciar Carrito</button>
      </form>
    </div>
</div>

<script></script>